{
  "presets": [
    [
      "env",
      {
        "targets": {
          "browsers": ["last 2 Firefox versions"]
        }
      }
    ],
    "flow",
    "react"
  ],
  "plugins": [
    "transform-decorators-legacy",
    "syntax-trailing-function-commas",
    "syntax-flow",
    "transform-class-properties",
    "transform-flow-strip-types",
    "transform-object-rest-spread"
  ],
  "env": {
    "test": {
      "presets": [
        [
          "env",
          {
            "targets": {
              "node": "current"
            }
          }
        ],
        "react"
      ],
      "plugins": ["istanbul"]
    }
  }
}
